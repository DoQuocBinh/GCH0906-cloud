<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>View All Product</title>
</head>

<body>
    <h1>All product</h1>
    <form action="/search" method="post">
        Product Name or Product ID <input type="text" name="txtName">
        <br>
        <input type="submit" value="Search">
    </form>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            {{#each products}}
            {{#if @first}}
            <li data-target="#myCarousel" data-slide-to="{{@index}}" class="active"></li>
            {{else}}
            <li data-target="#myCarousel" data-slide-to="{{@index}}"></li>
            {{/if}}
            {{/each}}
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            {{#each products}}
                {{#if @first}}
                    <div class="item active">
                        <img class="d-block w-100" src="{{picURL}}" width="150" height="100" alt="{{name}}" />
                    </div>
                {{else}}
                    <div class="item">
                        <img class="d-block w-100" src="{{picURL}}" width="150" height="100" alt="{{name}}" />
                    </div>
                {{/if}}
            {{/each}}
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{@index}}- {{name}}</td>
                <td>{{price}}</td>
                <td><img src="{{picURL}}" width="150" height="100" /></td>
                <td><a href="/edit?id={{_id}}">Edit</a></td>
            </tr>
            {{/each}}
        </tbody>
</body>

</html>